        <center><div class="login-box col-8">
            <h2 class="med-title" style="text-align: center;">CREATE AN ACCOUNT</h2>
            <form action = "/send_register" method="POST">
                <div class="user-box">
                  <div class="input-prefix"><label class="small-text">Name</label></div>
                  <input type="text" id = "user_name" name="user_name" required="" placeholder="John" class="ser-lab">
                    
                </div>
                <div class="user-box">
                  <div class="input-prefix"><label class="small-text">Surname</label></div>
                  <input type="text" id = "user_surname" name="user_surname" required="" placeholder="Doe" class="ser-lab">
                    
                </div>
                <div class="user-box">
                    <label for="phone" class="small-text">Phone</label>
                    <div class="input-prefix">
                        <input type="tel" name="user_number" id="user_number" pattern="[0-9]{10}" required placeholder="0XXXXXXXXX" class="ser-lab">
                    </div>
                </div>
                <div class="user-box">
                    <div class="input-prefix"> <label class="small-text">Password</label></div>
                    <input type="password" id = "user_password" name="user_password" required="" placeholder="*******" class="ser-lab">
                    
                </div>
                <button type="submit" class="btn btn-outline-light hed-btn" style="font-size: 18px; padding: 5px 50px 5px 50px; margin: 50px 0 50px 0;">Create</button>
            </form>
        </div></center>
